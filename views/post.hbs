<div id="posts" class="container">
    {{#if allowEdit}}
    <div class="row">
        <form action="/post/update/{{{post.id}}}" method="post">
            <div class="mb-3">
                <label for="title" class="form-label">Post Title</label>
                <input type="text" class="form-control" id="title" name="title" aria-describedby="titleHelp" value="{{post.title}}">
            </div>
            <div class="mb-3">
                <label for="content" class="form-label">Post Content</label>
                <textarea class="form-control" id="content" name="content" rows="6">{{post.content}}</textarea>
            </div>
            <button type="submit" class="btn btn-primary">Update Post</button>
            <a href="/post/delete/{{{post.id}}}" class="btn btn-danger">Delete Post</a>
        </form>  
    </div>              
    {{else}}
    <div class="post" data-id="{{post.id}}">
        <div class="post_header">
            <div class="row">
                <div class="col">
                    <h3>{{post.title}}</h3>
                </div>
                <div class="col post_details">
                    Posted By: {{post.User.email}} on {{{post.postdate}}}
                </div>
            </div>
        </div>
        <div class="post_content">
            {{{post.content}}}
        </div>
    </div>
    {{/if}}

    {{#if allowComment}}
    <div>
        <form action="/comment?post={{post.id}}" method="post">
            <div class="mb-3">
                <h4>Add Your Comment!</h4>
                <textarea class="form-control" id="content" name="content" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Save Comment</button>
        </form>
    </div>
    {{/if}}

    <div class="post_comments">
        <h4>Comments</h4>
        {{#each comments}}
        <div class="comment">
            <blockquote>{{{content}}}
                <span class="comment_user">
                    Posted By: {{User.email}} on {{{commentDate}}}
                </span>
            </blockquote>
        </div>
        {{/each}}
    </div>

</div>