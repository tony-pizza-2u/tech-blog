<div id="posts" class="container">
    <div class="post">
        <div class="post_header">
            <div class="row">
                <div class="col">
                    <h3>{{{post.title}}}</h3>
                </div>
                <div class="col post_details">
                    Posted By: {{post.User.email}} on {{{post.postdate}}}
                </div>
            </div>
        </div>
        <div class="post_content">
            {{{post.content}}}
        </div>
    </div>

    <div>
        <form action="/addcomment?post={{post.id}}" method="post">
            <div class="mb-3">
                <h4>Add Your Comment!</h4>
                <textarea class="form-control" id="comment" name="comment" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Save Comment</button>
        </form>
    </div>

    <div class="post_comments">
        <h4>Comments</h4>
        {{#each post.Comments}}
        <div class="comment">
            <blockquote>{{{content}}}
                <span class="comment_user">John Doe: 10/19/2023 3:30PM</span>
            </blockquote>
        </div>
        {{/each}}
    </div>
</div>